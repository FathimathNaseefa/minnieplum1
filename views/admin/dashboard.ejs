            border-radius: 10px;
            padding: 2rem;
        }
        .table-container{
            width: 100%;
        }

        table{
            width: 100%;
            border-collapse: collapse;
        }
        thead{
            background: rgba(113,99,186,255);
            color: #fff;
        }
        th{
            padding: 15px;
            text-align: left;
        }
        tbody{
            background: #f2f2f2;
        }
