    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

document.addEventListener("DOMContentLoaded", function () {
    const ctx = document.getElementById("salesChart").getContext("2d");
    let salesChart;

    // Function to fetch and display sales chart data
    function fetchChartData(filter) {
        fetch(`/admin/chart-data?filter=${filter}`)
            .then(response => response.json())
            .then(data => {
                if (salesChart) salesChart.destroy(); // Destroy previous chart
                salesChart = new Chart(ctx, {
                    type: "bar",
                    data: {
                        labels: data.labels,
                        datasets: [
                            {
                                label: "Total Sales (₹)",
                                data: data.values,
                                backgroundColor: "rgba(113,99,186,0.6)",
                                borderColor: "rgba(113,99,186,1)",
                                borderWidth: 1,
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: { beginAtZero: true },
                        },
                    },
                });
            })
            .catch(error => console.error("Error fetching chart data:", error));
    }


    // Event listener for chart filter dropdown
    document.getElementById("chartFilter").addEventListener("change", function () {
        fetchChartData(this.value);
    });

    
    fetchChartData("yearly"); // Load yearly sales data
    
});


document.addEventListener("DOMContentLoaded", function () {
    function fetchBestSellingData() {
        fetch("/admin/best-selling-data")
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    console.error("Error fetching best-selling data");
                    return;
                }

                // Populate Best-Selling Products
                const productTable = document.getElementById("bestSellingProducts");
                productTable.innerHTML = "";
                data.bestSellingProducts.forEach((product) => {
                    productTable.innerHTML += `
                        <tr>
                            <td>${product.productName}</td>
                            <td>₹${product.price}</td>
                            <td>${product.totalSold} pcs</td>
                            <td><i class="fas fa-circle" style="color:${product.stock > 0 ? "green" : "red"};"></i>
                                ${product.stock > 0 ? "In stock" : "Out of stock"}
                            </td>
                        </tr>
                    `;
                });

                // Populate Best-Selling Categories
                const categoryTable = document.getElementById("bestSellingCategories");
                categoryTable.innerHTML = "";
                data.bestSellingCategories.forEach((category) => {
                    categoryTable.innerHTML += `
                        <tr>
                            <td>${category.categoryName}</td>
                            <td>${category.totalSold} pcs</td>
                        </tr>
                    `;
                });

                // Populate Best-Selling Brands
                const brandTable = document.getElementById("bestSellingBrands");
                brandTable.innerHTML = "";
                data.bestSellingBrands.forEach((brand) => {
                    brandTable.innerHTML += `
                        <tr>
                            <td>${brand.brandName}</td>
                            <td>${brand.totalSold} pcs</td>
                        </tr>
                    `;
                });
            })
            .catch(error => console.error("Error fetching best-selling data:", error));
    }

    fetchBestSellingData();
});


