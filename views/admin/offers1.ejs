<%- include("../../views/partials/admin/header") %>
<style>


.offer-sections {
    display: flex;
    flex-direction: column;
    gap: 15px;
    align-items: center;
    text-align: center;
}
.offer-box {
    background-color: #fbfafd;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.offer-sections .btn {
    display: inline-block;
    /* padding: 10px 20px; */
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    background-color: #4CAF50;
    color: white;
    border-radius: 5px;
    transition: background-color 0.3s;
}
.main-container {
    display: grid;
    place-items: flex-start center; 
    height: 100%;
    padding-top: 30px; 
}

.offer-sections .btn:hover {
    background-color: #45a049;
}

h2 {
    font-size: 24px;
    margin-bottom: 40px;
    color: #333;
}

@media (min-width: 768px) {
    .offer-sections {
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .offer-sections .btn {
        padding: 12px 30px;
        font-size: 18px;
    }
}

</style>

<h1 style="text-align: center;">Offer Management</h1>
<div class="main-container">
<div class="offer-box">
<div class="offer-sections">
    <a href="/admin/product-offers" class="btn">Manage Product Offers</a>
    <a href="/admin/category-offers" class="btn">Manage Category Offers</a>
    
</div></div></div>

