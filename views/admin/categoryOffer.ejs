<%- include("../../views/partials/admin/header") %>
<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

h3 {
    font-size: 24px;
    color: #333;
    text-align: center;
    margin-top: 20px;
}

form {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 20px auto;
    width: 80%;
    max-width: 500px;
}

form input,
form select,
form button {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
}

form button {
    background-color: #4CAF50;
    color: white;
    cursor: pointer;
    border: none;
    font-size: 18px;
}

form button:hover {
    background-color: #45a049;
}

table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

table th, table td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

table th {
    background-color: #f4f4f4;
}

table tr:hover {
    background-color: #f1f1f1;
}

table button {
    background-color: #2575ec;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
}
th{
    background-color: blue;
}

table button:hover {
    background-color: #c0392b;
}

/* Modal Styles */
#editModal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

.modal-content {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    width: 50%;
    max-width: 600px;
    position: relative;
}

.close {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 30px;
    cursor: pointer;
}

/* Button Styles */
button {
    font-size: 16px;
    padding: 8px 16px;
    border-radius: 4px;
    cursor: pointer;
}

button[type="submit"] {
    background-color: #4CAF50;
    color: white;
    border: none;
    font-size: 18px;
}
table th {
    background-color: #2952da;  
}

button[type="submit"]:hover {
    background-color: #45a049;
}

button[type="button"] {
    background-color: #f39c12;
    color: white;
    border: none;
}

button[type="button"]:hover {
    background-color: #e67e22;
}
</style>
<!-- Error Message -->
<div id="error-message" style="display: none;" class="alert alert-danger"></div>

<div class="form-container">
    <div class="row">
        <div class="col-md-4">
            <form id="category-offer-form" method="POST">
                <select name="categoryId" id="categoryId" required>
                    <% categories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }); %>
                </select>
                <input type="number" name="discountValue" id="discountValue" placeholder="Discount %" required>
                <input type="date" name="expiry" id="expiry" required>
                <button type="submit">Add Offer</button>
            </form>
        </div>
        <div class="col-md-8">
            <table>
                <tr>
                    <th>Category</th>
                    <th>Discount</th>
                    <th>Expiry</th>
                    <th>Action</th>
                </tr>
                <% categoryOffers.forEach(offer => { %>
                    <tr id="row-<%= offer._id %>">
                        <td><%= offer.categoryId.name %></td>
                        <td><%= offer.discountValue %>%</td>
                        <td><%= new Date(offer.expiry).toLocaleDateString('en-GB') %></td>
                        <td>
                            <button onclick="confirmDelete('<%= offer._id %>', 'row-<%= offer._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </table>
        </div>
    </div>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    function showError(message) {
        const errorMessageElement = document.getElementById('error-message');
        errorMessageElement.innerText = message;
        errorMessageElement.style.display = 'block';
    }
    
    // Handle form submission with AJAX
    document.getElementById('category-offer-form').addEventListener('submit', async function (event) {
        event.preventDefault();
    
        const formData = new FormData(this);
        const formObject = {};
        formData.forEach((value, key) => {
            formObject[key] = value;
        });
    
        const discountValue = parseFloat(formObject.discountValue);
        const expiryDate = new Date(formObject.expiry);
        const currentDate = new Date();
    
        // Check if the discount is 100%
        if (discountValue === 100) {
            showError("Discount cannot be 100%. Please apply a valid discount value.");
            return;
        }
    
        // Check if the expiry date is in the past
        if (expiryDate < currentDate) {
            showError("The expiry date has already passed. Please choose a valid future date.");
            return;
        }
    
        try {
            const response = await fetch('/admin/add-category-offer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            });
    
            const data = await response.json();
    
            if (data.success) {
                Swal.fire('Success', data.message, 'success').then(() => location.reload());
            } else {
                showError(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            showError('An error occurred while adding the offer.');
        }
    });
    
    // Handle delete confirmation and request
    function confirmDelete(offerId, rowId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, keep it',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                fetch('/admin/delete-category-offer', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ offerId: offerId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById(rowId).remove(); // Remove the row from table
                        Swal.fire('Deleted!', 'Your offer has been deleted.', 'success');
                    } else {
                        Swal.fire('Error!', 'There was an issue deleting the offer.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error deleting the offer:', error);
                    Swal.fire('Error!', 'There was an issue deleting the offer.', 'error');
                });
            }
        });
    }
    </script>
    
