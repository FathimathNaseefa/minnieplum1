<div id="error-message" style="display: none;" class="alert alert-danger"></div>

<div class="form-container">
  <div class="row">
    <div class="col-md-4">
      <form id="product-offer-form" method="POST" class="horizontal-form">
        <select name="productId" id="productId" required>
          <% products.forEach(product => { %>
            <option value="<%= product._id %>"><%= product.productName %></option>
          <% }); %>
        </select>
        <input type="number" name="discountValue" id="discountValue" placeholder="Discount %" required>
        <input type="date" name="expiry" id="expiry" required>
        <button type="submit">Add Offer</button>
      </form>
    </div>
    <div class="col-md-8">
      <table>
        <tr>
          <th>Product</th>
          <th>Discount</th>
          <th>Expiry</th>
          <th>Action</th>
        </tr>
        <% pdtOffers.forEach(offer => { %>
          <tr>
            
            <td><%= offer.productId ? offer.productId.productName : 'Product Deleted' %></td>

            <td><%= offer.discountValue %>%</td>
            <td><%= new Date(offer.expiry).toLocaleDateString('en-GB') %></td>
            <td>
              <button onclick="confirmDelete('<%= offer._id %>', this.closest('tr'))">Delete</button>
            </td>
          </tr>
        <% }); %>
      </table>
    </div>
  </div>
</div>





<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    function showError(message) {
        const errorMessageElement = document.getElementById('error-message');
        errorMessageElement.innerText = message;
        errorMessageElement.style.display = 'block';
    }
    
    // Handle form submission
    document.getElementById('product-offer-form').addEventListener('submit', async function (event) {
        event.preventDefault();
    
        const formData = new FormData(this);
        const formObject = {};
        formData.forEach((value, key) => {
            formObject[key] = value;
        });
    
        const discountValue = parseFloat(formObject.discountValue);
        const expiryDate = new Date(formObject.expiry);
        const currentDate = new Date();
    
        // Check if the discount is 100%
        if (discountValue >= 100) {
            showError("Discount cannot be 100% or more. Please apply a valid discount value.");
            return;
        }
    
        // Check if the expiry date is in the past
        if (expiryDate < currentDate) {
            showError("The expiry date has already passed. Please choose a valid future date.");
            return;
        }
    
        try {
            const response = await fetch('/admin/add-product-offer', {
                method: 'POST',
                body: new URLSearchParams(formObject)
            });
    
            const data = await response.json();
    
            if (data.success) {
                // Show success message or refresh the page
                Swal.fire('Success', data.message, 'success').then(() => location.reload());
            } else {
                // Show error message in frontend
                showError(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            showError('An error occurred while adding the offer.');
        }
    });
    
    function confirmDelete(offerId, offerRow) {
        // SweetAlert2 confirmation dialog
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, keep it',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // If confirmed, send the delete request using AJAX
                fetch('/admin/delete-product-offer', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ offerId: offerId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // On success, remove the offer row from the table
                        offerRow.remove();  // Removes the row from the DOM
                        Swal.fire(
                            'Deleted!',
                            'Your offer has been deleted.',
                            'success'
                        );
                    } else {
                        Swal.fire(
                            'Error!',
                            'There was an issue deleting the offer.',
                            'error'
                        );
                    }
                })
                .catch(error => {
                    console.error('Error deleting the offer:', error);
                    Swal.fire(
                        'Error!',
                        'There was an issue deleting the offer.',
                        'error'
                    );
                });
            }
        });
    }
    </script>
    
