<style>
    
a{
    color: #000;
}
/* Wishlist Container */
.wishlist-container {
    width: 60%;
    margin: 20px auto;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

/* Wishlist Item */
.wishlist-item {
    display: flex;
    align-items: center;
    background: #f9f9f9;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
    position: relative;
}

.wishlist-item:hover {
    transform: scale(1.02);
}

/* Wishlist Image */
.wishlist-image img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
}

/* Wishlist Details */
.wishlist-details {
    flex: 1;
    margin-left: 20px;
}

.wishlist-details h4 {
    margin: 0;
    font-size: 18px;
    color: #333;
}

.wishlist-details p {
    margin: 5px 0;
    font-size: 16px;
    color: #666;
}

/* Wishlist Actions */
.wishlist-actions {
    margin-top: 10px;
    display: flex;
    align-items: center;
    gap: 15px;
}

/* Add to Cart Button */
.add-to-cart-btn {
    background: #28a745;
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
    transition: 0.2s;
}

.add-to-cart-btn:hover {
    background: #218838;
}

/* Delete Icon */
.delete-icon {
    cursor: pointer;
    font-size: 25px;
    color: #161616;
    transition: 0.2s;
}

.delete-icon:hover {
    color: #d32f2f;
}
a{
    text-decoration: none;
}
</style>


<div class="wish" style="background-color: rgb(247, 244, 244);">
    <h2 style="text-align: center;">My Wishlist</h2>
    <p>Shopping List</p>
    <div class="wishlist-container">
        <% if (wishlist.length > 0) { %>
            <% wishlist.forEach(product => { %>
                <div class="wishlist-item">
                    <div class="wishlist-image">
                        <% if (product.productImage && product.productImage.length > 0) { %>
                            <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                        <% } else { %>
                            <img src="/images/default.jpg" alt="No Image Available">
                        <% } %>
                    </div>
                    <div class="wishlist-details">
                        <div class="d-flex justify-content-between align-items-center">
                            <% if (typeof product.stock !== "undefined" && product.stock > 0) { %>
                                <p class="stock-status text-success">In Stock</p>
                            <% } else { %>
                                <p class="stock-status text-danger">Out of Stock</p>
                            <% } %>
                            <div class="wishlist-actions">
                                <span class="delete-icon" onclick="removeFromWishlist('<%= product._id %>')">
                                    <i class="fas fa-trash-alt"></i>
                                </span>
                            </div>
                        </div>
                        <h4><%= product.productName %></h4>
                        <div>
                            <i class="fas fa-star" style="color: gold;"></i>
                            <i class="fas fa-star" style="color: gold;"></i>
                            <i class="fas fa-star" style="color: gold;"></i>
                            <i class="fas fa-star" style="color: gold;"></i>
                            <i class="far fa-star" style="color: gold;"></i>
                        </div>
                        <p><%= product.description %></p>
                        
                        <!-- Size -->
        <% if (product.size && product.size.length > 0) { %>
            <p>Size: 
                <% product.size.forEach(size => { %>
                    <span><%= size %></span>
                <% }) %>
            </p>
        <% } else { %>
            <p>No size available</p>
        <% } %>

        <!-- Color -->
        <% if (product.color && product.color.length > 0) { %>
            <p>Color: 
                <% product.color.forEach(color => { %>
                    <span style="background-color: <%= color %>; padding: 5px; border-radius: 5px;">
                        <%= color %>
                    </span>
                <% }) %>
            </p>
        <% } else { %>
            <p>No color available</p>
        <% } %>


        
            <div class="d-flex justify-content-between align-items-center">
                <p><strong>Price:</strong> 
                    
                    â‚¹<%= Math.round(product.finalPrice / 10) * 10 %>
                    <% if (product.discountPercent > 0) { %>
                        <span style="text-decoration: line-through;">â‚¹<%= product.salePrice.toLocaleString('en-IN') %></span>
                        <span style="color: red;">(Save <%= product.discountPercent %>%)</span>
                    <% } %>
                </p>
            
            
            
                <div class="wishlist-actions">
            
            
                    
<button class="add-to-cart-btn"
    onclick="addToCart('<%= product._id %>', '<%= Math.round(product.finalPrice / 10) * 10 %>', '<%= product.size && product.size.length > 0 ? product.size[0] : '' %>', '<%= product.color && product.color.length > 0 ? product.color[0] : '' %>')">
    Add to Cart
</button> 



                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>Your wishlist is empty.</p>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>



function addToCart(productId, price, size, color) {
    fetch("/checkCart", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.stockFullyAdded) {
            // âœ… Show error when all stock is added to cart
            Swal.fire({
                icon: "error",
                title: "All available stock added to Cart",
                text: "No more stock is available for this product.",
                timer: 2000,
                showConfirmButton: false
            });
        } else if (data.cartQuantity >= 5) {
            // âœ… Show error when the user has 5 or more of the same product in the cart
            Swal.fire({
                icon: "error",
                title: "Limit Reached",
                text: "You can only add up to 5 units of the same product.",
                timer: 2000,
                showConfirmButton: false
            });
        } else {
            // âœ… Add to cart even if already in the cart
            fetch("/addToCart", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId, quantity: 1, price, size, color })
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === true) {
                    Swal.fire({
                        icon: "success",
                        title: "Added to Cart",
                        text: "Item has been added successfully!",
                        timer: 1500,
                        showConfirmButton: false
                    });

                    return fetch(`/wishlist/remove/${productId}`, { method: 'POST' });
                }
            })
            .then(() => {
                setTimeout(() => location.reload(), 1500);
            })
            .catch(error => console.error("ðŸ”¥ Error adding to cart:", error));
        }
    })
    .catch(error => console.error("ðŸ”¥ Error checking cart stock:", error));
}



function removeFromWishlist(productId) {
    Swal.fire({
        title: "Are you sure?",
        text: "Do you want to remove this item from your wishlist?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, remove it!"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/wishlist/remove/${productId}`, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: "success",
                        title: "Removed",
                        text: "Item has been removed from your wishlist!",
                        timer: 1500,
                        showConfirmButton: false
                    });

                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(error => console.error("Error:", error));
        }
    });
}


</script>
